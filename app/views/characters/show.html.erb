<%- model_class = Character -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player) %>:</strong></dt>
  <dd><%= @character.player %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @character.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level) %>:</strong></dt>
  <dd><%= @character.level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_hp) %>:</strong></dt>
  <dd><%= @character.total_hp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experience) %>:</strong></dt>
  <dd><%= @character.experience %></dd>
  <dt><strong><%= model_class.human_attribute_name(:race_id) %>:</strong></dt>
  <dd><%= @character.race_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_race_id) %>:</strong></dt>
  <dd><%= @character.sub_race_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_job_id) %>:</strong></dt>
  <dd><%= @character.class_job_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_class_job_id) %>:</strong></dt>
  <dd><%= @character.sub_class_job_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:background_id) %>:</strong></dt>
  <dd><%= @character.background_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_path(@character), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_path(@character),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
